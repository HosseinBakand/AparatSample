<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Base theme, all common styling here-->
    <style name="Theme.AparatViewer" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_lightest</item>
        <item name="colorOnPrimary">#000</item>
        <item name="colorPrimaryVariant">@color/primary_lightest</item>
        <item name="android:windowBackground">@color/surface_main</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_0_white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/gray_0_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/surface_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">?attr/isLightTheme</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.AparatViewer.Headline1</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.AparatViewer.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.AparatViewer.Headline4</item>
        <item name="textAppearanceBody1">@style/TextAppearance.AparatViewer.Body</item>
        <item name="textAppearanceCaption">@style/TextAppearance.AparatViewer.Caption</item>

        <!--Platform attributes-->
        <item name="android:navigationBarColor">@color/primary_darkest</item>
        <item name="colorSurface">@color/surface_main</item>
        <item name="subtitleTextColor">@color/text_7_dark</item>
        <item name="android:textColor">@color/text_7_dark</item>
        <item name="hintTextColor">@color/text_3</item>
        <item name="android:textColorSecondary">@color/text_5</item>
        <item name="android:layoutDirection">rtl</item>

    </style>
</resources>